extends ../layouts/default

block content

  h2: strong: a(href="/")= title

  form(method="post", action="example/create")
    fieldset
      legend Crear #{title}
      div.form-group
        label Title
        input(type="text", class="form-control", placeholder="Title", name="title")
      div.form-group
        label Body
        input(type="text", class="form-control", placeholder="Body", name="body")

      button(type="submit", class="btn btn-default") Crear